extends ../shared/layout
block main-content
    .well: form.form-horizontal(method="post"): fieldset
        legend Create Event
        .form-group
            label.col-md-4.control-label(for="title") Title
            .col-md-8
                input.form-control(id="title" type="text" required="required" name="title" placeholder="Title")
        .form-group
            label.col-md-4.control-label(for="description") Brief Description
            .col-md-8
                input.form-control(id="description" type="text" required="required" name="description" placeholder="Brief Description")

        .form-group
            label.col-md-4.control-label(for="date") Date
            .col-md-4
                input.form-control(id="date" type="text" name="date" required="required")

        .form-group
            label.col-md-4.control-label Location
            .col-md-4
                input.form-control(id="latitude" type="number" name="latitude" placeholder="Latitude")
            .col-md-4
                input.form-control(id="longitude" type="number" name="longitude" placeholder="Longitude")

        .form-group
            label.col-md-4.control-label(for="category") Category
            .col-md-8
                select.form-control(id="category" name="category" required="required")
                    each category in categories
                        option(value="#{category}")= category

        .form-group
            label.col-md-4.control-label Type
            .col-md-8
                .btn-group.btn-group-justified
                    .btn.btn-primary.lead(id="publicBtn") Public
                    .btn.btn-success.lead(id="initiativeBasedBtn") Initiative based
                    .btn.btn-warning.lead(id="InitiativeAndSeasonBasedBtn") Initiative and season based
            input(id="create-event-type" type="text" name="eventType" value="public")

        .form-group(id="create-event-initiatives")
            label.col-md-4.control-label(for="initiatives") Telerik Academy Initiatives
            .col-md-8
                select.form-control(id="initiatives" name="initiative")
                    each initiative in initiatives
                        option(value="#{initiative}")= initiative

        .form-group(id="create-event-seasons")
            label.col-md-4.control-label(for="seasons") Telerik Academy Seasons
            .col-md-8
                select.form-control(id="seasons" name="season")
                    each season in seasons
                        option(value="#{season}")= season

        .pull-right
            input.btn.btn-primary(type="submit" value="Create")
            a.btn.btn-danger(href="/") Cancel

block page-scripts
    script(src="/js/createEvent.js")